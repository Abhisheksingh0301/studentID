<title>
  <%= title %>
</title>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" />
<link rel="stylesheet" href="/stylesheets/style.css" />
<link href="/css/bootstrap.min.css" rel="stylesheet" />
<script src="/js/jquery.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<%- include('header'); -%>
  <section class="featured">
    <div class="content-wrapper">
      <h1 id="myHeader">
        <%= title %>
      </h1>
    </div>
  </section>
  <hr />


  <div class="navbar">
    <div class="col-md-12">
      <form action="/searchrecords/" method="POST">
        <table>
          <tr>
            <td>
              <div class="form-floating">
                <input type="text" id="txtreg" name="txtreg" class="form-control" style="
                font-weight: bold;
                color: darkgreen; float:right;
                font-family: 'Times New Roman', Times, serif;
              " placeholder="Registration no." value="<%= reg %>" />
                <label for="txtreg">Registration no.</label>
              </div>
            </td>

            <td>
              <button type="submit" class="btn btn-success">
                <i class="fa fa-search" aria-hidden="true"></i>&nbsp;Search
              </button>
            </td>
          </tr>
        </table>
      </form>
    </div>
    <hr>
    <br>
    <hr>

    <% if(passouts.length>0){ %>
      <form action="/addrequest/" method="POST">
        <div class="container d-flex justify-content-center mx-auto">
          <table class="table">
            <input type="hidden" name="id" value="<%= passouts[0]._id %>">
            <tr>
              <td><label for="txtname">Name:</label></td>
              <td  colspan="3">
                <input id="txtname" type="text" value="<%= passouts[0].name %>" name="txtname" readonly
                class="form-control" style="font-weight: bold; color: darkblue" />
              </td>
            </tr>
            <tr>
              <td><label for="txtid">Student ID:</label></td>
              <td>
                <input id="txtid" type="text" value="<%= passouts[0].student_id %>" name="txtid" readonly
                  class="form-control" style="font-weight: bold; color: darkblue" />
              </td>
              <td><label for="txtclass">Class:</label></td>
              <td>
                <input id="txtclass" type="text" value="<%= passouts[0].class %>" name="txtclass" readonly
                  class="form-control" style="font-weight: bold; color: darkblue" />
              </td>
            </tr>
            <tr>
              <td><label for="txtroll">Roll:</label></td>
              <td>
                <input id="txtroll" type="text" value="<%= passouts[0].roll %>" name="txtroll" readonly
                  class="form-control" style="font-weight: bold; color: darkblue" />
              </td>
              <td><label for="txtregno">Regd No.:</label></td>
              <td>
                <input id="txtregno" type="text" value="<%= passouts[0].registrationno %>" name="txtregno" readonly
                  class="form-control" style="font-weight: bold; color: darkblue" />
              </td>
            </tr>
            <tr>
              <td><label for="txtdept">Department:</label></td>
              <td>
                <input id="txtdept" type="text" value="<%= passouts[0].department %>" name="txtdept" readonly
                  class="form-control" style="font-weight: bold; color: darkblue" />
              </td>
              <td><label for="txtcampus">Campus:</label></td>
              <td>
                <input id="txtcampus" type="text" value="<%= passouts[0].campus_id %>" name="txtcampus" readonly
                  class="form-control" style="font-weight: bold; color: darkblue" />
              </td>
            </tr>
          </table>
        </div>
      </form>
      <% } else { %>
        <h3 style="font:bold;color: darkred;font-family: monospace;">No records found</h3>
        <% } %>

          <%- include('footer'); -%>